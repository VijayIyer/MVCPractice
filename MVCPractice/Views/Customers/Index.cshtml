@model IEnumerable<MVCPractice.Customer> 
 @using MVCPractice.CustomHelpers
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

    <style>
          .pagination {
          display: inline-block;
                    }

        .pagination a {
          color: black;
          float: left;
          padding: 8px 16px;
          text-decoration: none;
          transition: background-color .3s;
          border: 1px solid #ddd;
          margin: 0 4px;
        }

        .pagination a.active {
          background-color: #4CAF50;
          color: white;
          border: 1px solid #4CAF50;
        }

        .pagination a:hover:not(.active) {background-color: #ddd;}
    </style>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script>
        $(document).ready(function () {
            var quantitiy = 0;
            $('.quantity-right-plus').click(function (e) {

                // Stop acting like a button

                // Get the field name
                var quantity = parseInt($('#quantity').val());

                // If is not undefined

                $('#quantity').val(quantity + 1);


                // Increment

            });

            $('.quantity-left-minus').click(function (e) {
                // Stop acting like a button

                // Get the field name
                var quantity = parseInt($('#quantity').val());

                // If is not undefined

                // Increment
                if (quantity > 0) {
                    $('#quantity').val(quantity - 1);
                }
            });
            $("button[class*='btn-number']").click(function () {

                var options =
                    {
                        url: $("form").attr("action"),
                        type: "GET",
                        data: {
                            "pagesize": $("input[class*='input-number']").val(),

                        }
                    };
                $.ajax(options).done(function (data) {
                    $("#CustomersTable").html(data);
                });
                return false;
            });

           
            $(".pagination a").click(function () {
                var CurrentPage = @ViewBag.CustomerCount;
                CurrentPage += 1
                var options =
                    {
                        url: $("form").attr("action"),
                        type: "GET",
                        data: {
                            "pagesize": $("input[class*='input-number']").val(),
                            "pagenumber": CurrentPage.toString()
                        }
                    };
                $.ajax(options).done(function (data) {
                    $("#CustomersTable").html(data);
                });

            });
            
        });
    </script>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
   
        <p>
        <div class="container">
            <div class="row">
                
                <div class="col-md-2">
                    <div class="input-group">
                         <span class="input-group-btn">
                            <button type="button" class="quantity-left-minus btn btn-danger btn-number" data-type="minus" data-field="">
                                <span class="glyphicon glyphicon-minus"></span>
                            </button>
                        </span>
                        <input type="text" id="quantity" name="quantity" class="form-control input-number" value="10" min="1" max="100">
                        <span class="input-group-btn">
                            <button type="button" class="quantity-right-plus btn btn-success btn-number" data-type="plus" data-field="">
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </p>
    
</p>
@Html.Partial("CustomersTable",ViewBag.CustomerCount as string)

<div class="pagination">
    <a>&lt;</a>
    <a>&gt;</a>
</div>